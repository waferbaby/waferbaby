<h2>Hello!</h2>
<p>Here are some things I've written.</p>

<% @site.posts.each do |post| %>
  <article>
    <h3><a href="<%= post.url %>"><%= post.title %></a></h3>
    <time datetime="<%= post.date.strftime('%Y-%m-%d') %>"><%= post.date.strftime('%B %d, %Y') %></time>
    <p><%= post.summary %></p>
  </article>
<% end %>
